<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/mainPadding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/imageGold"
                android:layout_width="@dimen/imageView"
                android:layout_height="@dimen/imageView"
                android:layout_alignParentLeft="true"
                android:background="@drawable/gold_icon"
                android:layout_weight="0.5"
                />

            <TextView
                android:id="@+id/dataGold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/imageView"
                android:text="data"
                android:textSize="@dimen/textField"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_weight="0.5"
                android:layout_marginRight="@dimen/marginRight"
               />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <ImageView
                android:id="@+id/imageSilber"
                android:layout_width="@dimen/imageView"
                android:layout_height="@dimen/imageView"
                android:layout_alignParentLeft="true"
                android:background="@drawable/silber_icon"
                />

            <TextView
                android:id="@+id/dataSilber"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/imageView"
                android:text="data"
                android:textSize="@dimen/textField"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/marginRight"
                />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>